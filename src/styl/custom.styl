.reveal
    h1
        font-size 3.5em
        line-height 0.9em
    .main-title
        margin-bottom 50px
    .main-links
        font-size 0.8em
    .heart
        display inline-block
        background-image url("../img/heart.svg")
        width 110px
        height 110px
        margin 0 20px -10px
        &.activated
            animation pulse 1.3s ease
            animation-iteration-count 4
    .align-left
        text-align left
    hr
        border 1px dashed #000
    > .backgrounds
        background #222

    .list-itens
        list-style none
        margin-top 80px
        li
            display: inline-block
            text-align: center
            border 1px dashed #ccc
            width 25%
            height 178px
            vertical-align middle
            padding 2%
            margin 1%
            &.visualizers
                border-color #a23
                line-height 170px
            &.dsp
                line-height 58px
                border-color #a23
            &.web-audio
                padding 71px 2% 0
                height 147px
                border-color #a23
                
    .web-audio-options
        margin-top 40px
    .highlight-item
        color #a23
    section img
        border none
        background transparent

@keyframes pulse
  0% 
        transform scale(1)
  50% 
        transform: scale(1.3)
  100%
        transform: scale(1)
