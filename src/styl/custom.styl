.reveal
    h1
        font-size 3.5em
        line-height 0.9em
    .main-title
        margin-bottom 50px
    .main-links
        font-size 0.8em
    .heart
        display inline-block
        background-image url("../img/heart.svg")
        width 110px
        height 110px
        margin 0 20px -10px
        &.activated
            animation pulse 1.3s ease
            animation-iteration-count 4

.align-left
    text-align left

hr
    border 1px dashed #000

@keyframes pulse
  0% 
        transform scale(1)
  50% 
        transform: scale(1.3)
  100%
        transform: scale(1)
